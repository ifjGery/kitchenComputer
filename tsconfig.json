{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "Components": ["packages/ui-components"],
    }
  },
  "include": [
    "packages",
    "__mocks__",
    "__tests__/components/App.test.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
